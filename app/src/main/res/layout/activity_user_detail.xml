<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserDetailActivity">

    <ImageView
        android:id="@+id/imageView_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textView_fullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="ФИО"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_user" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_fullName"
        android:layout_marginStart="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView_street"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Улица: "
                android:textSize="16sp"
                android:minHeight="48dp"

                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/textView_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Город: "
                android:textSize="16sp"
                android:minHeight="48dp"

                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/textView_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Штат: "
                android:textSize="16sp"
                android:minHeight="48dp"

                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/textView_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Страна: "
                android:textSize="16sp"
                android:minHeight="48dp"

                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/textView_postcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Почтовый индекс: "
                android:textSize="16sp"
                android:minHeight="48dp"

                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/textView_coordinates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Координаты: "
                android:textSize="16sp"
                android:minHeight="48dp"

                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/textView_timezone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Часовой пояс: "
                android:textSize="16sp"
                android:minHeight="48dp"

                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/textView_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Почта:"
                android:textSize="16sp"
                android:minHeight="48dp"

                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/textView_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:minHeight="48dp"
                android:text="Телефон:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Дата рождения:"
                android:textSize="16sp"
                android:minHeight="48dp"

                android:layout_marginBottom="8dp"
                />

            <TextView
                android:id="@+id/textView_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Пол:"
                android:textSize="16sp"
                android:minHeight="48dp"

                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/textView_nat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Национальность: "
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>